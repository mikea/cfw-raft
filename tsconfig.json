{
  "compilerOptions": {
    "types": ["@cloudflare/workers-types", "mocha"],
    "module": "ESNext",
    "target": "esnext",
    "lib": ["esnext"],
    "alwaysStrict": true,
    "strict": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "moduleResolution": "node",
    "outDir": "build",
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "composite": true,
    "rootDir": "src"
  },
  "include": ["src/**/*.ts"],
  "ts-node": {
    "esm": true
  }
}
